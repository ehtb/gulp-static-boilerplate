{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "jquery": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__TEST__": true,
    "__RELEASE__": true
  },
  "rules": {
    "block-scoped-var": 0,
    "padded-blocks": 0,
    "quotes": [2, "single", "avoid-escape"],
    "comma-dangle": 0,
    "no-use-before-define": [2, "nofunc"],
    "nonew": 0
  },
  "ecmaFeatures": {
    "modules": true,
    "arrowFunctions": true,
    "templateStrings": true,
    "blockBindings": true
  }
}
